{
  "name": "Workshop N8N + EvolutionAPI",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [5678, 8080, 8081],
  "portsAttributes": {
    "5678": {
      "label": "N8N"
    },
    "8080": {
      "label": "EvolutionAPI"
    },
    "8081": {
      "label": "EvolutionAPI Manager"
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json"
      ]
    }
  }
}
